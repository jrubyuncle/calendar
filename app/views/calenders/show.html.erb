<div class="container">

  <div class="page-header">
    <%= link_to :back, class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list-alt"></span>
      返回
    <% end %>
    <%= link_to calender_path(@calender, format: :ics), class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-calendar"></span>
      匯出
    <% end %>
    <% if user_signed_in? && current_user.id == current_user %>
      <%= link_to edit_calender_path(@calender), class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        修改行事曆名稱
      <% end %>
    <% end %>

    <%= link_to calender_events_path(@calender), class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-edit"></span>

    <% end %>
    <!-- Button trigger modal -->
    <div class="btnright">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
      分享
    </button>
    </div>




    <h1><%= @calender.name %></h1>
  </div>
  <div id="calendar" data-path="<%= calender_events_path(@calender, format: :json)%>"></div>
</div>



<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">分享</h4>
      </div>
      <div class="modal-body">

        <h4>嵌入連結</h4>
        <input type="text" value='<iframe width="660" height="315" src="http://localhost:3000/calendars/1/embeded"></iframe>' style="width:560px;">
        <br>
        or
        <br>
        <a target="_blank" href="http://www.facebook.com/share.php?u=<%= calender_url(@calender) %>"><i class="fa fa-facebook-square"> 分享到Facebook</i></a>


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">關閉</button>
      </div>
    </div>
  </div>
</div>